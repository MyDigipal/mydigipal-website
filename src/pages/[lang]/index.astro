---

<PageLayout lang={lang}>
  <!-- ======================== -->
  <!-- HERO SECTION -->
  <!-- ======================== -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-50 via-white to-indigo-50">
    <!-- Background decoration -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-1/2 -right-1/4 w-[800px] h-[800px] rounded-full bg-indigo-500/5 blur-3xl"></div>
      <div class="absolute -bottom-1/2 -left-1/4 w-[600px] h-[600px] rounded-full bg-violet-500/5 blur-3xl"></div>
    </div>

    <div class="relative container-custom py-24 lg:py-32">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-indigo-100 text-indigo-700 font-medium mb-8 animate-fade-in">
          <Icon name="sparkles" size={16} />
          <span>{c.hero.badge}</span>
        </div>

        <!-- Headline -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-4 animate-fade-in-up">
          {c.hero.headline}
        </h1>

        <!-- Subheadline -->
        <p class="text-xl md:text-2xl text-indigo-600 font-medium mb-6 animate-fade-in-up animation-delay-100">
          {c.hero.subheadline}
        </p>

        <!-- Description -->
        <p class="text-lg text-slate-600 max-w-2xl mx-auto mb-10 animate-fade-in-up animation-delay-200">
          {c.hero.description}
        </p>

        <!-- CTAs -->
        <div class="flex flex-wrap justify-center gap-4 animate-fade-in-up animation-delay-300">
          <a
            href={`/${lang}/calculator`}
            class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl hover:shadow-xl hover:shadow-indigo-500/25 hover:scale-105 transition-all duration-300"
          >
            <Icon name="calculator" size={20} />
            <span>{c.hero.cta1}</span>
          </a>
          <a
            href={`/${lang}/case-studies`}
            class="inline-flex items-center gap-2 px-8 py-4 bg-white text-slate-700 font-semibold rounded-xl border-2 border-slate-200 hover:border-indigo-300 hover:text-indigo-600 transition-all duration-300"
          >
            <span>{c.hero.cta2}</span>
            <Icon name="arrow-right" size={20} />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- ======================== -->
  <!-- TRUSTED BY -->
  <!-- ======================== -->
  <TrustedBy lang={lang} variant="compact" />

  <!-- ======================== -->
  <!-- ABOUT / WHO WE ARE -->
  <!-- ======================== -->
  <section class="py-24 bg-white">
    <div class="container-custom">
      <!-- Header -->
      <div class="text-center mb-16 animate-on-scroll">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-indigo-100 text-indigo-700 font-medium mb-6">
          <Icon name="heart" size={16} />
          <span>{c.about.badge}</span>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
          {c.about.headline}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {c.about.description}
        </p>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-16 animate-on-scroll">
        {c.about.stats.map((stat) => (
          <div class="text-center p-6 bg-gradient-to-br from-slate-50 to-indigo-50 rounded-2xl">
            <div class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-indigo-500 to-purple-600 bg-clip-text text-transparent">
              {stat.value}
            </div>
            <div class="text-sm text-slate-600 mt-2 font-medium">{stat.label}</div>
          </div>
        ))}
      </div>

      <!-- Team Photos -->
      <div class="mb-16 animate-on-scroll">
        <div class="flex flex-wrap justify-center gap-4 md:gap-6">
          {[
            { name: 'Paul André', image: '/images/team/Team_Paul_Andre.webp', role: 'Founder & CEO' },
            { name: 'Alexandre Echement', image: '/images/team/Team_Alexandre_Echement.avif', role: 'Performance Lead' },
            { name: 'Jordan Langlois', image: '/images/team/Team_Jordan_Langlois.avif', role: 'Digital Strategist' },
            { name: 'Alizée Varloud', image: '/images/team/Team_Alizee_Varloud.avif', role: 'Project Manager' },
            { name: 'Juliette Joire', image: '/images/team/Team_Juliette_Joire.avif', role: 'Content Specialist' },
            { name: 'Sophie Roe', image: '/images/team/Team_Sophie_Roe.avif', role: 'SEO Specialist' },
            { name: 'Callum Dunbar', image: '/images/team/Team_Callum_Dunbar.avif', role: 'PPC Specialist' },
            { name: 'Heather Mann', image: '/images/team/Team_Heather_Mann.avif', role: 'Social Media' },
            { name: 'Victoria Doherty', image: '/images/team/Team_Victoria_Doherty.avif', role: 'Account Manager' },
            { name: 'Amna Khan', image: '/images/team/Team_Amna_Khan.avif', role: 'Digital Marketer' },
            { name: 'Diksha Mishra', image: '/images/team/Team_Diksha_Mishra.avif', role: 'Marketing Analyst' },
            { name: 'Chirag Solanki', image: '/images/team/Team_Chirag_Solanki.avif', role: 'Tech Lead' },
            { name: 'Shuai Yang', image: '/images/team/Team_Shuai_Yang.avif', role: 'Developer' },
            { name: 'Bruce Eidsvik', image: '/images/team/Team_Bruce_Eidsvik.avif', role: 'Consultant' },
          ].map((member, index) => (
            <div
              class="group relative"
              style={`animation-delay: ${index * 50}ms`}
            >
              <div class="w-16 h-16 md:w-20 md:h-20 rounded-full overflow-hidden border-3 border-white shadow-lg group-hover:scale-110 group-hover:shadow-xl transition-all duration-300">
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
              <div class="absolute -bottom-8 left-1/2 -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
                <div class="bg-slate-900 text-white text-xs px-2 py-1 rounded whitespace-nowrap">
                  {member.name}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Values -->
      <div class="grid md:grid-cols-3 gap-8">
        {c.about.values.map((value, index) => (
          <div
            class="value-card group p-8 bg-white rounded-2xl border-2 border-slate-100 hover:border-indigo-300 transition-all duration-300 hover:shadow-xl animate-on-scroll"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <Icon name={value.icon} size={32} class="text-white" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-3">{value.title}</h3>
            <p class="text-slate-600 leading-relaxed">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ======================== -->
  <!-- SERVICES -->
  <!-- ======================== -->
  <section class="py-24 bg-gradient-to-b from-slate-50 to-white">
    <div class="container-custom">
      <!-- Header -->
      <div class="text-center mb-16 animate-on-scroll">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-indigo-100 text-indigo-700 font-medium mb-6">
          <Icon name="layers" size={16} />
          <span>{c.services.badge}</span>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
          {c.services.headline}
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          {c.services.subtitle}
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {c.services.items.map((service, index) => (
          <a
            href={service.link}
            class="service-card group relative p-6 bg-white rounded-2xl border border-slate-200 hover:border-indigo-300 transition-all duration-300 hover:shadow-xl animate-on-scroll"
            style={`animation-delay: ${index * 80}ms`}
          >
            <!-- Icon -->
            <div class={`w-14 h-14 rounded-xl bg-gradient-to-br ${colorMap[service.color].gradient} flex items-center justify-center mb-5 group-hover:scale-110 transition-transform duration-300`}>
              <Icon name={service.icon} size={28} class="text-white" />
            </div>

            <!-- Content -->
            <h3 class="text-xl font-bold text-slate-900 mb-2">{service.name}</h3>
