---

<PageLayout lang={lang} title={c.seo.title} description={c.seo.description}>
  <!-- Hero Section -->
  <section class="relative py-24 lg:py-32 bg-gradient-to-br from-slate-900 via-violet-900 to-slate-900 overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(167,139,250,0.3) 1px, transparent 0); background-size: 50px 50px;"></div>
    </div>

    <!-- Floating Elements -->
    <div class="absolute top-1/4 left-10 w-20 h-20 border border-violet-400/30 rounded-lg rotate-12 animate-float"></div>
    <div class="absolute bottom-1/4 right-20 w-16 h-16 border border-purple-400/30 rounded-full animate-float" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 right-1/4 w-12 h-12 bg-violet-500/20 rounded-lg animate-float" style="animation-delay: 2s;"></div>

    <!-- Gradient Orbs -->
    <div class="absolute top-20 left-1/4 w-96 h-96 bg-violet-600 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
    <div class="absolute bottom-20 right-1/4 w-96 h-96 bg-purple-600 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 1s;"></div>

    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm text-violet-300 font-medium mb-6 animate-fade-in">
          <Icon name="sparkles" size={16} />
          <span>{c.hero.badge}</span>
        </div>

        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-4 animate-fade-in" style="animation-delay: 0.1s;">
          {c.hero.headline}
        </h1>

        <p class="text-2xl md:text-3xl text-violet-300 font-medium mb-6 animate-fade-in" style="animation-delay: 0.2s;">
          {c.hero.subheadline}
        </p>

        <p class="text-lg text-slate-300 max-w-2xl mx-auto mb-10 animate-fade-in" style="animation-delay: 0.3s;">
          {c.hero.description}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in" style="animation-delay: 0.4s;">
          <Button href={`/${lang}/services/ai-training`} variant="primary" size="lg" class="bg-violet-600 hover:bg-violet-700">
            {lang === 'fr' ? 'Découvrir la Formation' : 'Explore Training'}
          </Button>
          <Button href={`/${lang}/contact`} variant="outline" size="lg" class="border-white/30 text-white hover:bg-white/10">
            {lang === 'fr' ? 'Nous Contacter' : 'Contact Us'}
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Section with Stats -->
  <section class="py-24 bg-gradient-to-b from-slate-50 to-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center mb-16 animate-on-scroll">
        <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
          {c.intro.title}
        </h2>
        <p class="text-xl text-slate-600 mb-4">
          {c.intro.description}
        </p>
        <p class="text-lg text-slate-500">
          {c.intro.paragraph}
        </p>
      </div>

      <!-- Stats -->
      <div class="grid md:grid-cols-3 gap-8 max-w-3xl mx-auto mb-16">
        {c.intro.stats.map((stat, index) => (
          <div
            class="text-center p-6 bg-white rounded-2xl shadow-lg border border-slate-100 animate-on-scroll"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-violet-600 to-purple-600 bg-clip-text text-transparent mb-2">
              {stat.value}
            </div>
            <div class="text-slate-600">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-24 bg-white">
    <div class="container-custom">
      <div class="text-center mb-16 animate-on-scroll">
