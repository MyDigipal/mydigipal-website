      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-24 bg-white">
    <div class="container-custom">
      <div class="text-center mb-16 animate-on-scroll">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-cyan-100 text-cyan-700 font-medium mb-6">
          <Icon name="layers" size={16} />
          <span>{lang === 'fr' ? 'Nos services automobile' : 'Our Automotive Services'}</span>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
          {lang === 'fr' ? 'Solutions marketing pour concessions' : 'Marketing Solutions for Dealerships'}
        </h2>
      </div>

      <div class="space-y-8">
        {c.services.map((service, index) => (
          <a
            href={service.href}
            class="service-card group block p-8 md:p-10 bg-white rounded-3xl border-2 border-slate-200 hover:border-cyan-300 transition-all duration-500 animate-on-scroll overflow-hidden"
            style={`animation-delay: ${index * 150}ms`}
          >
            <div class="grid lg:grid-cols-3 gap-8 items-center">
              <!-- Left: Content -->
              <div class="lg:col-span-2">
                <div class="flex items-center gap-4 mb-4">
                  <div class={`w-14 h-14 rounded-2xl bg-gradient-to-br ${service.color} flex items-center justify-center group-hover:scale-110 transition-transform duration-300`}>
                    <Icon name={service.icon} size={28} class="text-white" />
                  </div>
                  <div>
                    <h3 class="text-2xl font-bold text-slate-900 group-hover:text-cyan-600 transition-colors">{service.name}</h3>
                    <p class={`text-sm font-medium bg-gradient-to-r ${service.color} bg-clip-text text-transparent`}>{service.tagline}</p>
                  </div>
                </div>

                <p class="text-slate-600 mb-6 leading-relaxed">{service.description}</p>

                <!-- Features -->
                <div class="flex flex-wrap gap-2 mb-6">
                  {service.features.map(feature => (
                    <span class="px-3 py-1 text-sm bg-slate-100 text-slate-600 rounded-full">
                      {feature}
                    </span>
                  ))}
                </div>

                <!-- CTA -->
                <div class="flex items-center gap-2 text-cyan-600 font-semibold group-hover:gap-3 transition-all">
                  <span>{c.cta}</span>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </div>

              <!-- Right: Highlights + Stat -->
              <div class="space-y-6">
                <!-- Stat Badge -->
                <div class={`p-4 rounded-2xl bg-gradient-to-br ${service.color} text-white text-center`}>
                  <div class="text-3xl font-bold">{service.stat.value}</div>
                  <div class="text-sm opacity-90">{service.stat.label}</div>
                </div>

                <!-- Highlights -->
                <div class="bg-slate-50 rounded-2xl p-4">
                  <ul class="space-y-2">
                    {service.highlights.slice(0, 3).map(highlight => (
                      <li class="flex items-start gap-2 text-sm">
                        <svg class="w-4 h-4 text-cyan-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-slate-600">{highlight}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Client Logos -->
  <section class="py-20 bg-slate-50">
    <div class="container-custom">
      <h3 class="text-center text-slate-600 font-semibold text-lg mb-12">{c.clients.title}</h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-8 items-center justify-items-center">
        {c.clients.logos.map((client) => (
          <div class="flex items-center justify-center p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300">
            <img src={client.logo} alt={client.name} class="h-16 md:h-20 w-auto max-w-[140px] object-contain" loading="lazy" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-24 bg-white">
