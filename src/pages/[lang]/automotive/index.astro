          <p class="text-xl text-slate-600 leading-relaxed">
            {c.intro.description}
          </p>
        </div>

        <!-- Right: Points Grid -->
        <div class="grid sm:grid-cols-2 gap-6">
          {c.intro.points.map((point, index) => (
            <div
              class="point-card p-6 bg-white rounded-2xl border border-slate-200 hover:border-cyan-200 hover:shadow-lg transition-all duration-300 animate-on-scroll"
