---
import '@/styles/global.css';
import { languages, type Language } from '@/i18n/config';
import { t } from '@/i18n/utils';
import CookieConsent from '@/components/ui/CookieConsent.astro';

// GTM Configuration
const GTM_ID = 'GTM-P4TSQ9Q'; // Google Tag Manager ID
const GA4_ID = 'G-039QHRCWY1'; // GA4 Measurement ID
const META_PIXEL_ID = '848469840083737'; // Meta Pixel ID

interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: Language;
  noindex?: boolean;
  canonicalURL?: string;
}

const {
  title,
  description,
  image = '/images/og-default.jpg',
  lang = 'en',
  noindex = false,
  canonicalURL,
} = Astro.props;

const siteTitle = t(lang, 'site.name');
const siteDescription = t(lang, 'site.description');

const pageTitle = title ? `${title} | ${siteTitle}` : `${siteTitle} - ${t(lang, 'site.tagline')}`;
const pageDescription = description || siteDescription;

const currentPath = Astro.url.pathname;
const pathWithoutLang = currentPath.replace(/^\/(en|fr)/, '');

// Generate alternate language links
const alternateLinks = Object.keys(languages).map((l) => ({
  lang: l,
  href: new URL(`/${l}${pathWithoutLang}`, Astro.site).href,
}));

const canonical = canonicalURL || Astro.url.href;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Canonical -->
    <link rel="canonical" href={canonical} />

    <!-- Alternate Languages -->
    {alternateLinks.map((link) => (
      <link rel="alternate" hreflang={link.lang} href={link.href} />
    ))}
    <link rel="alternate" hreflang="x-default" href={alternateLinks.find(l => l.lang === 'en')?.href} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:locale" content={lang === 'fr' ? 'fr_FR' : 'en_US'} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url.href} />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={pageDescription} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/Logos/Favicon logo_256px.png" />
    <link rel="apple-touch-icon" href="/images/Logos/Favicon logo_256px.png" />
    <meta name="theme-color" content="#4F46E5" />

    <!-- Structured Data: Organization + WebSite (Global) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://mydigipal.com/#organization",
          "name": "MyDigipal",
          "url": "https://mydigipal.com",
          "logo": {
            "@type": "ImageObject",
            "url": "https://mydigipal.com/images/Logos/Logo_Main_Horizontal.png",
            "width": 512,
            "height": 512
          },
          "description": lang === 'fr'
            ? "Agence de marketing digital B2B spécialisée en ABM, Paid Media, SEO et solutions IA"
            : "B2B Digital Marketing Agency specialized in ABM, Paid Media, SEO and AI Solutions",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "128 Rue de la Boétie",
            "addressLocality": "Paris",
            "postalCode": "75008",
            "addressCountry": "FR"
          },
          "contactPoint": {
            "@type": "ContactPoint",
            "telephone": "+33-1-86-65-54-40",
            "contactType": "sales",
            "availableLanguage": ["English", "French"]
          },
          "sameAs": [
            "https://www.linkedin.com/company/mydigipal",
            "https://twitter.com/mydigipal"
          ]
        },
        {
          "@type": "WebSite",
          "@id": "https://mydigipal.com/#website",
          "url": "https://mydigipal.com",
          "name": "MyDigipal",
          "publisher": {
            "@id": "https://mydigipal.com/#organization"
          },
          "inLanguage": ["en", "fr"]
        }
      ]
    })} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- View Transitions -->
    <meta name="view-transition" content="same-origin" />

    <!-- Google Consent Mode V2 - MUST be before GTM -->
    <script is:inline define:vars={{ GA4_ID }}>
      // Initialize dataLayer and gtag function globally
      window.dataLayer = window.dataLayer || [];
      window.gtag = function(){window.dataLayer.push(arguments);};

      // Set default consent to denied (GDPR compliant)
      window.gtag('consent', 'default', {
        'analytics_storage': 'denied',
        'ad_storage': 'denied',
        'ad_user_data': 'denied',
        'ad_personalization': 'denied',
        'functionality_storage': 'granted',
        'security_storage': 'granted',
        'wait_for_update': 500
      });

      // Enable URL passthrough for better conversion modeling
      window.gtag('set', 'url_passthrough', true);

      // Enable ads data redaction when consent denied
      window.gtag('set', 'ads_data_redaction', true);
    </script>

    <!-- Google Tag Manager -->
    <script is:inline define:vars={{ GTM_ID }}>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer',GTM_ID);
    </script>

    <!-- Additional head content -->
    <slot name="head" />
  </head>

  <body class="min-h-screen flex flex-col bg-white text-slate-900 antialiased">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src={`https://www.googletagmanager.com/ns.html?id=${GTM_ID}`}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      ></iframe>
    </noscript>

    <slot />

    <!-- Scripts -->
    <script>
      // Store UTM params on page load
      import { storeUTMParams } from '@/lib/utils';
      storeUTMParams();

      // Intersection Observer for scroll animations
      document.addEventListener('DOMContentLoaded', () => {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add('is-visible');
              }
            });
          },
          {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px',
          }
        );

        document.querySelectorAll('.animate-on-scroll, .stagger-children').forEach((el) => {
          observer.observe(el);
        });
      });
    </script>

    <!-- Analytics slot -->
    <slot name="analytics" />

    <!-- Phone and Email Click Tracking -->
    <script is:inline>
      (function() {
        document.addEventListener('click', function(e) {
          const link = e.target.closest('a[href^="tel:"], a[href^="mailto:"]');
          if (!link) return;

          const href = link.getAttribute('href');
          const isPhone = href.startsWith('tel:');
          const isEmail = href.startsWith('mailto:');

          if (window.dataLayer) {
            if (isPhone) {
              window.dataLayer.push({
                'event': 'phone_click',
                'click_url': href,
                'click_text': link.textContent?.trim() || href
              });
            } else if (isEmail) {
              window.dataLayer.push({
                'event': 'email_click',
                'click_url': href,
                'click_text': link.textContent?.trim() || href
              });
            }
          }
        });
      })();
    </script>

    <!-- Cookie Consent Banner -->
    <CookieConsent lang={lang} />
  </body>
</html>
