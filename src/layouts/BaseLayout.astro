---
import '@/styles/global.css';
import { languages, type Language } from '@/i18n/config';
import { t } from '@/i18n/utils';
import CookieConsent from '@/components/ui/CookieConsent.astro';

// GTM Configuration - All tracking (GA4, Meta Pixel, Hotjar) is managed via GTM
const GTM_ID = 'GTM-P4TSQ9Q';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: Language;
  noindex?: boolean;
  canonicalURL?: string;
  ogType?: 'website' | 'article';
  articlePublishedTime?: Date;
  articleModifiedTime?: Date;
  articleAuthor?: string;
  articleSection?: string;
  articleTags?: string[];
}

const {
  title,
  description,
  image = '/images/Logos/MyDigipal Logo_Full Main - 1200x630.png',
  lang = 'en',
  noindex = false,
  canonicalURL,
  ogType = 'website',
  articlePublishedTime,
  articleModifiedTime,
  articleAuthor,
  articleSection,
  articleTags = [],
} = Astro.props;

const siteTitle = t(lang, 'site.name');
const siteDescription = t(lang, 'site.description');

const pageTitle = title ? `${title} | ${siteTitle}` : `${siteTitle} - ${t(lang, 'site.tagline')}`;
const pageDescription = description || siteDescription;

const currentPath = Astro.url.pathname;
const pathWithoutLang = currentPath.replace(/^\/(en|fr)/, '');

// Generate alternate language links
const alternateLinks = Object.keys(languages).map((l) => ({
  lang: l,
  href: new URL(`/${l}${pathWithoutLang}`, Astro.site).href,
}));

const canonical = canonicalURL || Astro.url.href;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Canonical -->
    <link rel="canonical" href={canonical} />

    <!-- Alternate Languages -->
    {alternateLinks.map((link) => (
      <link rel="alternate" hreflang={link.lang} href={link.href} />
    ))}
    <link rel="alternate" hreflang="x-default" href={alternateLinks.find(l => l.lang === 'en')?.href} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="MyDigipal" />
    <meta property="og:locale" content={lang === 'fr' ? 'fr_FR' : 'en_US'} />
    {ogType === 'article' && articlePublishedTime && (
      <meta property="article:published_time" content={articlePublishedTime.toISOString()} />
    )}
    {ogType === 'article' && articleModifiedTime && (
      <meta property="article:modified_time" content={articleModifiedTime.toISOString()} />
    )}
    {ogType === 'article' && articleAuthor && (
      <meta property="article:author" content={articleAuthor} />
    )}
    {ogType === 'article' && articleSection && (
      <meta property="article:section" content={articleSection} />
    )}
    {ogType === 'article' && articleTags.map((tag) => (
      <meta property="article:tag" content={tag} />
    ))}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url.href} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/Logos/Favicon logo_256px.png" />
    <link rel="apple-touch-icon" href="/images/Logos/Favicon logo_256px.png" />
    <meta name="theme-color" content="#4F46E5" />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title={lang === 'fr' ? 'Blog MyDigipal' : 'MyDigipal Blog'} href={`/${lang}/rss.xml`} />

    <!-- Structured Data: Organization + WebSite + LocalBusiness (Global) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://mydigipal.com/#organization",
          "name": "MyDigipal",
          "url": "https://mydigipal.com",
          "logo": {
            "@type": "ImageObject",
            "url": "https://mydigipal.com/images/Logos/Logo_Main_Horizontal.png",
            "width": 512,
            "height": 512
          },
          "description": lang === 'fr'
            ? "Agence de marketing digital B2B spécialisée en ABM, Paid Media, SEO et solutions IA"
            : "B2B Digital Marketing Agency specialized in ABM, Paid Media, SEO and AI Solutions",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "128 Rue de la Boétie",
            "addressLocality": "Paris",
            "postalCode": "75008",
            "addressCountry": "FR"
          },
          "contactPoint": {
            "@type": "ContactPoint",
            "telephone": "+33-1-86-65-54-40",
            "contactType": "sales",
            "availableLanguage": ["English", "French"]
          },
          "sameAs": [
            "https://www.linkedin.com/company/mydigipal",
            "https://twitter.com/mydigipal"
          ]
        },
        {
          "@type": "WebSite",
          "@id": "https://mydigipal.com/#website",
          "url": "https://mydigipal.com",
          "name": "MyDigipal",
          "publisher": {
            "@id": "https://mydigipal.com/#organization"
          },
          "inLanguage": ["en", "fr"]
        },
        {
          "@type": "LocalBusiness",
          "@id": "https://mydigipal.com/#localbusiness",
          "name": "MyDigipal",
          "image": "https://mydigipal.com/images/Logos/Logo_Main_Horizontal.png",
          "url": "https://mydigipal.com",
          "telephone": "+33-1-86-65-54-40",
          "email": "hello@mydigipal.com",
          "priceRange": "€€€",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "128 Rue de la Boétie",
            "addressLocality": "Paris",
            "addressRegion": "Île-de-France",
            "postalCode": "75008",
            "addressCountry": "FR"
          },
          "geo": {
            "@type": "GeoCoordinates",
            "latitude": 48.8738,
            "longitude": 2.3078
          },
          "openingHoursSpecification": [
            {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
              "opens": "09:00",
              "closes": "18:00"
            }
          ],
          "sameAs": [
            "https://www.linkedin.com/company/mydigipal",
            "https://twitter.com/mydigipal"
          ]
        }
      ]
    })} />

    <!-- DNS Prefetch for external resources -->
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />
    <link rel="dns-prefetch" href="https://connect.facebook.net" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- View Transitions -->
    <meta name="view-transition" content="same-origin" />

    <!-- Google Consent Mode V2 - MUST be before GTM -->
    <script is:inline>
      // Initialize dataLayer and gtag function globally
      window.dataLayer = window.dataLayer || [];
      window.gtag = function(){window.dataLayer.push(arguments);};

      // Check if user has explicitly refused cookies
      var hasRefused = false;
      try {
        var consentCookie = document.cookie.split('; ').find(function(c) {
          return c.startsWith('mydigipal_consent=');
        });
        if (consentCookie) {
          var consent = JSON.parse(decodeURIComponent(consentCookie.split('=')[1]));
          hasRefused = consent.refused === true;
        }
      } catch(e) {}

      // HYBRID APPROACH:
      // - Analytics: granted by default (legitimate interest), denied if refused
      // - Ads/Marketing: denied by default, only granted with explicit consent
      window.gtag('consent', 'default', {
        'analytics_storage': hasRefused ? 'denied' : 'granted',
        'ad_storage': 'denied',
        'ad_user_data': 'denied',
        'ad_personalization': 'denied',
        'functionality_storage': 'granted',
        'security_storage': 'granted',
        'wait_for_update': 500
      });

      // Enable URL passthrough for better conversion modeling
      window.gtag('set', 'url_passthrough', true);

      // Enable ads data redaction when consent denied
      window.gtag('set', 'ads_data_redaction', true);
    </script>

    <!-- Google Tag Manager - Deferred loading for better LCP -->
    <script is:inline define:vars={{ GTM_ID }}>
      (function(w,d,l,i){
        w[l]=w[l]||[];
        w[l].push({'gtm.start':new Date().getTime(),event:'gtm.js'});
        function loadGTM(){
          if(w.gtmLoaded)return;
          w.gtmLoaded=true;
          var f=d.getElementsByTagName('script')[0],
          j=d.createElement('script');
          j.async=true;
          j.src='https://www.googletagmanager.com/gtm.js?id='+i;
          f.parentNode.insertBefore(j,f);
        }
        // Load GTM after page is interactive or on first interaction
        if('requestIdleCallback' in w){
          w.requestIdleCallback(loadGTM,{timeout:3000});
        }else{
          w.setTimeout(loadGTM,2000);
        }
        // Also load on any user interaction
        ['scroll','click','touchstart','keydown'].forEach(function(e){
          w.addEventListener(e,loadGTM,{once:true,passive:true});
        });
      })(window,document,'dataLayer',GTM_ID);
    </script>

    <!-- Additional head content -->
    <slot name="head" />
  </head>

  <body class="min-h-screen flex flex-col bg-white text-slate-900 antialiased">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src={`https://www.googletagmanager.com/ns.html?id=${GTM_ID}`}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      ></iframe>
    </noscript>

    <slot />

    <!-- Scripts -->
    <script>
      // Store UTM params on page load
      import { storeUTMParams } from '@/lib/utils';
      storeUTMParams();

      // Intersection Observer for scroll animations
      document.addEventListener('DOMContentLoaded', () => {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add('is-visible');
              }
            });
          },
          {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px',
          }
        );

        document.querySelectorAll('.animate-on-scroll, .stagger-children').forEach((el) => {
          observer.observe(el);
        });
      });
    </script>

    <!-- Analytics slot -->
    <slot name="analytics" />

    <!-- Phone and Email Click Tracking -->
    <script is:inline>
      (function() {
        document.addEventListener('click', function(e) {
          const link = e.target.closest('a[href^="tel:"], a[href^="mailto:"]');
          if (!link) return;

          const href = link.getAttribute('href');
          const isPhone = href.startsWith('tel:');
          const isEmail = href.startsWith('mailto:');

          if (window.dataLayer) {
            if (isPhone) {
              window.dataLayer.push({
                'event': 'phone_click',
                'click_url': href,
                'click_text': link.textContent?.trim() || href
              });
            } else if (isEmail) {
              window.dataLayer.push({
                'event': 'email_click',
                'click_url': href,
                'click_text': link.textContent?.trim() || href
              });
            }
          }
        });
      })();
    </script>

    <!-- Cookie Consent Banner -->
    <CookieConsent lang={lang} />
  </body>
</html>
