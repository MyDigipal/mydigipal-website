---
import { type Language } from '@/i18n/config';
import { t } from '@/i18n/utils';
import Icon from '@/components/ui/Icon.astro';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;

const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { label: 'Google Ads', href: `/${lang}/services/google-ads` },
    { label: 'Paid Social', href: `/${lang}/services/paid-social` },
    { label: 'SEO', href: `/${lang}/services/seo` },
    { label: 'Emailing', href: `/${lang}/services/emailing` },
    { label: 'B2B / ABM', href: `/${lang}/services/b2b-abm` },
  ],
  ai: [
    { label: lang === 'fr' ? 'Formation IA' : 'AI Training', href: `/${lang}/services/ai-training` },
    { label: lang === 'fr' ? 'Solutions IA' : 'AI Solutions', href: `/${lang}/services/ai-solutions` },
    { label: lang === 'fr' ? 'Contenu IA' : 'AI Content', href: `/${lang}/services/ai-content` },
  ],
  automotive: [
    { label: 'Google Ads', href: `/${lang}/automotive/google-ads` },
    { label: 'Paid Social', href: `/${lang}/automotive/paid-social` },
    { label: 'Dynamic Ads', href: `/${lang}/automotive/dynamic-ads` },
  ],
  company: [
    { label: t(lang, 'nav.caseStudies'), href: `/${lang}/case-studies` },
    { label: t(lang, 'nav.blog'), href: `/${lang}/blog` },
    { label: t(lang, 'nav.contact'), href: `/${lang}/contact` },
    { label: lang === 'fr' ? 'Devis Gratuit' : 'Get a Quote', href: `/${lang}/calculator` },
  ],
};

const legalLinks = [
  { label: lang === 'fr' ? 'Politique de Confidentialité' : 'Privacy Policy', href: `/${lang}/privacy-policy` },
  { label: lang === 'fr' ? 'Conditions d\'Utilisation' : 'Terms of Service', href: `/${lang}/terms-of-service` },
];

const socialLinks = [
  { icon: 'linkedin', href: 'https://www.linkedin.com/company/mydigipal', label: 'LinkedIn' },
  { icon: 'youtube', href: 'https://www.youtube.com/@MyDigipal-ABM', label: 'YouTube' },
  { icon: 'rss', href: `/${lang}/rss.xml`, label: 'RSS Feed' },
];
---

<footer class="bg-slate-900 text-white">
  <!-- Main Footer -->
  <div class="container-custom py-12 lg:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-4 lg:col-span-1">
        <a href={`/${lang}`} class="flex items-center mb-4">
          <img
            src="/images/Logos/03_Full white.png"
            alt="MyDigipal"
            class="h-10 w-auto"
          />
        </a>
        <p class="text-primary-400 font-medium mb-3">
          {t(lang, 'site.tagline')}
        </p>
        <p class="text-slate-400 text-sm leading-relaxed mb-6 max-w-sm">
          {lang === 'fr'
            ? 'Agence de marketing digital basée à Londres, spécialisée en B2B, ABM et Automobile.'
            : 'Digital marketing agency based in London, specialized in B2B, ABM and Automotive.'
          }
        </p>

        <!-- Social links -->
        <div class="flex gap-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-lg bg-slate-800 hover:bg-indigo-600 flex items-center justify-center transition-colors"
              aria-label={social.label}
            >
              <Icon name={social.icon} size={20} class="text-slate-400 hover:text-white" />
            </a>
          ))}
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-semibold text-white mb-4">{t(lang, 'footer.services')}</h4>
        <ul class="space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- AI -->
      <div>
        <h4 class="font-semibold text-white mb-4">{lang === 'fr' ? 'IA' : 'AI'}</h4>
        <ul class="space-y-3">
          {footerLinks.ai.map((link) => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Automotive -->
      <div>
        <h4 class="font-semibold text-white mb-4">{lang === 'fr' ? 'Automobile' : 'Automotive'}</h4>
        <ul class="space-y-3">
          {footerLinks.automotive.map((link) => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-semibold text-white mb-4">{t(lang, 'footer.company')}</h4>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-slate-800">
    <div class="container-custom py-6">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-slate-500 text-sm">
          &copy; {currentYear} MyDigipal LTD. {t(lang, 'footer.allRightsReserved')}
        </p>
        <div class="flex items-center gap-4 text-slate-500 text-sm">
          {legalLinks.map((link, index) => (
            <>
              <a href={link.href} class="hover:text-slate-300 transition-colors">
                {link.label}
              </a>
              {index < legalLinks.length - 1 && <span>•</span>}
            </>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
