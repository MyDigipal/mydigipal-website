---
import { cn } from '@/lib/utils';

interface Props {
  href?: string;
  variant?: 'default' | 'hover' | 'interactive';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  href,
  variant = 'default',
  padding = 'md',
  class: className,
} = Astro.props;

const variants = {
  default: '',
  hover: 'hover:shadow-soft hover:border-slate-300 hover:-translate-y-1',
  interactive: 'cursor-pointer hover:shadow-medium hover:border-primary-500/50 hover:-translate-y-1',
};

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const classes = cn(
  'bg-white rounded-2xl border border-slate-200 transition-all duration-300',
  variants[variant],
  paddings[padding],
  className
);

const Tag = href ? 'a' : 'div';
---

<Tag href={href} class={classes}>
  <slot />
</Tag>
