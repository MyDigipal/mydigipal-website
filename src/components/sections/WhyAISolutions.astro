---

<section class="py-24 bg-slate-950 text-white overflow-hidden relative">
  <!-- Background Effects -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-20 -left-20 w-96 h-96 bg-indigo-500/10 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-20 -right-20 w-96 h-96 bg-purple-500/10 rounded-full blur-[120px]"></div>
    <!-- Grid pattern -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
  </div>

  <div class="container-custom relative z-10">
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-indigo-500/20 border border-indigo-500/30 text-indigo-300 font-medium mb-6">
        <span class="w-2 h-2 bg-indigo-400 rounded-full animate-pulse"></span>
        <span>{t.badge}</span>
      </div>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
        {t.headline}
      </h2>
      <p class="text-2xl text-indigo-300 font-medium mb-6">{t.subheadline}</p>
      <p class="text-xl text-slate-400 max-w-3xl mx-auto">{t.description}</p>
    </div>

    <!-- Stats -->
    <div class="grid md:grid-cols-3 gap-6 mb-20">
      {t.stats.map((stat, index) => (
        <div
          class="stat-card relative bg-white/5 backdrop-blur-sm rounded-2xl p-6 border border-white/10 hover:border-indigo-500/30 transition-all duration-500 group text-center"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-indigo-500/20 text-indigo-400 mb-4">
            <Icon name={stat.icon} size={24} />
          </div>
          <div class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-2">
            {stat.value}
          </div>
          <div class="text-sm text-slate-400">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- Journey Section -->
    <div class="mb-20">
      <div class="text-center mb-12">
        <h3 class="text-3xl font-bold text-white mb-2">{t.journey.title}</h3>
        <p class="text-lg text-slate-400">{t.journey.subtitle}</p>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        {t.journey.steps.map((step, index) => (
          <div class="relative">
            {/* Connector line */}
            {index < t.journey.steps.length - 1 && (
              <div class="hidden lg:block absolute top-12 left-full w-full h-0.5 bg-gradient-to-r from-indigo-500/50 to-transparent z-0"></div>
            )}

            <div class="relative bg-gradient-to-br from-slate-800/50 to-slate-900/50 rounded-3xl p-8 border border-slate-700/50 hover:border-indigo-500/30 transition-all duration-300 group">
              {/* Step number */}
              <div class="absolute -top-4 left-8 px-3 py-1 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full text-sm font-bold">
                {step.number}
              </div>

              <div class="flex items-center gap-4 mb-4 mt-2">
                <div class="w-12 h-12 rounded-xl bg-indigo-500/20 text-indigo-400 flex items-center justify-center group-hover:bg-indigo-500/30 transition-colors">
                  <Icon name={step.icon} size={24} />
                </div>
                <h4 class="text-xl font-bold text-white">{step.title}</h4>
              </div>

              <p class="text-slate-400 mb-4">{step.description}</p>

              {step.cta && step.ctaLink && (
                <a
                  href={`/${lang}/services/${step.ctaLink}`}
                  class="inline-flex items-center gap-2 text-indigo-400 hover:text-indigo-300 font-medium transition-colors"
                >
                  {step.cta}
                  <Icon name="arrow-right" size={16} />
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Warning & Solution -->
    <div class="grid lg:grid-cols-2 gap-8 max-w-5xl mx-auto">
      <!-- Warning -->
      <div class="relative bg-gradient-to-br from-slate-800/50 to-slate-900/50 rounded-3xl p-8 border border-amber-500/30">
