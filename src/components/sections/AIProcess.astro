---

<section class="py-24 bg-white overflow-hidden">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium mb-6 bg-indigo-50 text-indigo-600 border border-indigo-100">
        <Icon name="settings" size={16} />
        {t.badge}
      </span>
      <h2 class="text-3xl lg:text-5xl font-bold text-slate-900 mb-4">{t.headline}</h2>
      <p class="text-xl text-indigo-600 font-medium mb-4">{t.subheadline}</p>
      <p class="text-lg text-slate-600">{t.description}</p>
    </div>

    <!-- Principles -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-20">
      {t.principles.map((principle) => (
        <div class="bg-slate-50 rounded-2xl p-6 border border-slate-100 hover:border-indigo-200 hover:shadow-lg transition-all duration-300 group">
          <div class="w-12 h-12 rounded-xl bg-indigo-100 text-indigo-600 flex items-center justify-center mb-4 group-hover:bg-indigo-500 group-hover:text-white transition-colors">
            <Icon name={principle.icon} size={24} />
          </div>
          <h3 class="text-lg font-bold text-slate-900 mb-2">{principle.title}</h3>
          <p class="text-sm text-slate-600">{principle.description}</p>
        </div>
      ))}
    </div>

    <!-- Process Timeline -->
    <div class="mb-20">
      <h3 class="text-2xl font-bold text-slate-900 text-center mb-12">{t.process.title}</h3>

      <div class="relative">
        {/* Timeline line - desktop only */}
        <div class="hidden lg:block absolute top-16 left-0 right-0 h-0.5 bg-gradient-to-r from-indigo-200 via-indigo-400 to-purple-400"></div>

        <div class="grid lg:grid-cols-5 gap-8">
          {t.process.steps.map((step, index) => (
            <div class="relative">
              {/* Step indicator */}
              <div class="flex lg:flex-col items-start lg:items-center gap-4 lg:gap-0">
                {/* Circle */}
                <div class="relative z-10 w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 text-white flex items-center justify-center font-bold text-sm shadow-lg shadow-indigo-500/30 lg:mb-6">
                  {step.number}
                </div>

                {/* Content */}
                <div class="flex-1 lg:text-center">
                  <h4 class="font-bold text-slate-900 mb-2">{step.title}</h4>
                  <p class="text-sm text-slate-600 mb-2">{step.description}</p>
                  <span class="inline-block px-3 py-1 text-xs font-medium bg-indigo-50 text-indigo-600 rounded-full">
                    {step.duration}
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Technologies -->
    <div class="bg-slate-900 rounded-3xl p-8 lg:p-12">
      <h3 class="text-xl font-bold text-white text-center mb-8">{t.models.title}</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {t.models.items.map((model) => (
          <div class="flex items-center gap-3 px-4 py-3 bg-white/10 rounded-xl text-white hover:bg-white/20 transition-colors">
            <Icon name={model.icon} size={20} class="text-indigo-400" />
            <span class="text-sm font-medium">{model.name}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
