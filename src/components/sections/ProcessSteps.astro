---
interface Step {
  step: number;
  title: string;
  description: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  steps: Step[];
}

const { title, subtitle, steps } = Astro.props;
---

<section class="section bg-slate-50">
  <div class="container-custom">
    {(title || subtitle) && (
      <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
        {title && <h2 class="heading-2 mb-4">{title}</h2>}
        {subtitle && <p class="body-large">{subtitle}</p>}
      </div>
    )}

    <div class="max-w-4xl mx-auto">
      <div class="relative">
        <!-- Connecting line -->
        <div class="absolute left-8 top-8 bottom-8 w-0.5 bg-slate-200 hidden md:block"></div>

        <div class="space-y-8 stagger-children">
          {steps.map((step, index) => (
            <div class="relative flex gap-6 md:gap-8">
              <!-- Step number -->
              <div class="flex-shrink-0 relative z-10">
                <div class="w-16 h-16 rounded-2xl bg-white border-2 border-slate-200 flex items-center justify-center shadow-soft">
                  <span class="text-2xl font-bold text-primary-500">{step.step}</span>
                </div>
              </div>

              <!-- Content -->
              <div class="flex-1 pt-3">
                <h3 class="heading-4 mb-2">{step.title}</h3>
                <p class="body text-slate-500">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
