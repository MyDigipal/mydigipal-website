---
import { type Language } from '@/i18n/config';
import Icon from '@/components/ui/Icon.astro';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;

const translations = {
  en: {
    badge: "Free Tool",
    headline: "Estimate Your Marketing Budget",
    subtitle: "Use our calculator to get a personalized estimate of your monthly marketing investment based on your goals and industry.",
    features: [
      "Get budget recommendations by channel",
      "Tailored to your industry & goals",
      "Takes only 2 minutes"
    ],
    cta: "Try the Calculator",
    free: "100% Free"
  },
  fr: {
    badge: "Outil Gratuit",
    headline: "Estimez Votre Budget Marketing",
    subtitle: "Utilisez notre calculateur pour obtenir une estimation personnalisée de votre investissement marketing mensuel basée sur vos objectifs et votre industrie.",
    features: [
      "Recommandations budget par canal",
      "Adapté à votre industrie & objectifs",
      "Seulement 2 minutes"
    ],
    cta: "Essayer le Calculateur",
    free: "100% Gratuit"
  }
};

const t = translations[lang] || translations.en;
---

<section class="py-20 bg-gradient-to-r from-indigo-600 via-purple-600 to-indigo-700 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-full h-full" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'0.4\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <!-- Floating Elements -->
  <div class="absolute top-10 left-10 w-20 h-20 bg-white/10 rounded-full blur-xl"></div>
  <div class="absolute bottom-10 right-10 w-32 h-32 bg-purple-300/20 rounded-full blur-2xl"></div>

  <div class="container-custom relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-12">
      <!-- Left: Content -->
      <div class="flex-1 text-center lg:text-left animate-on-scroll">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/20 text-white font-medium mb-6 backdrop-blur-sm">
          <Icon name="calculator" size={16} />
          <span>{t.badge}</span>
        </div>

        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {t.headline}
        </h2>

        <p class="text-xl text-indigo-100 mb-8 max-w-xl">
          {t.subtitle}
        </p>

        <!-- Features -->
        <ul class="space-y-3 mb-8">
          {t.features.map(feature => (
            <li class="flex items-center gap-3 text-white">
              <span class="w-6 h-6 rounded-full bg-white/20 flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </span>
              {feature}
            </li>
          ))}
        </ul>

        <!-- CTA -->
        <div class="flex flex-col sm:flex-row items-center gap-4">
          <a
            href={`/${lang}/calculator`}
            class="inline-flex items-center gap-3 px-8 py-4 bg-white text-indigo-700 font-bold rounded-xl hover:shadow-2xl hover:scale-105 transition-all duration-300 group"
          >
            <Icon name="calculator" size={20} />
            <span>{t.cta}</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <span class="text-indigo-200 text-sm">{t.free}</span>
        </div>
      </div>

      <!-- Right: Calculator Preview -->
      <div class="flex-1 max-w-md animate-on-scroll" style="animation-delay: 200ms">
        <div class="relative">
          <!-- Mock Calculator Card -->
          <div class="bg-white rounded-2xl shadow-2xl p-6 transform rotate-2 hover:rotate-0 transition-transform duration-500">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
                <Icon name="calculator" size={20} class="text-white" />
              </div>
              <div>
                <div class="font-bold text-slate-900">Marketing Calculator</div>
                <div class="text-sm text-slate-500">MyDigipal</div>
              </div>
            </div>

            <!-- Mock Form Elements -->
            <div class="space-y-4">
              <div>
                <div class="text-xs text-slate-500 mb-1">Industry</div>
                <div class="h-10 bg-slate-100 rounded-lg flex items-center px-3">
                  <span class="text-sm text-slate-700">B2B SaaS / Tech</span>
                </div>
              </div>
              <div>
                <div class="text-xs text-slate-500 mb-1">Monthly Budget</div>
                <div class="h-10 bg-slate-100 rounded-lg flex items-center px-3">
                  <span class="text-sm text-slate-700">€10,000 - €25,000</span>
                </div>
              </div>
              <div>
                <div class="text-xs text-slate-500 mb-1">Primary Goal</div>
                <div class="h-10 bg-slate-100 rounded-lg flex items-center px-3">
                  <span class="text-sm text-slate-700">Lead Generation</span>
                </div>
              </div>
            </div>

            <!-- Mock Result -->
            <div class="mt-6 p-4 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-xl">
              <div class="text-xs text-slate-500 mb-1">Recommended Split</div>
              <div class="flex gap-2">
                <span class="px-2 py-1 bg-indigo-100 text-indigo-700 text-xs rounded">LinkedIn 40%</span>
                <span class="px-2 py-1 bg-purple-100 text-purple-700 text-xs rounded">Google 35%</span>
                <span class="px-2 py-1 bg-pink-100 text-pink-700 text-xs rounded">Email 25%</span>
              </div>
            </div>
          </div>

          <!-- Decorative elements -->
          <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-2xl -z-10 opacity-50"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-on-scroll {
    animation: fade-up 0.6s ease forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  @keyframes fade-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
