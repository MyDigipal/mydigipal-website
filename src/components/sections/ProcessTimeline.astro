---
import { type Language } from '@/i18n/config';
import Icon from '@/components/ui/Icon.astro';

interface Step {
  step: number;
  title: string;
  description: string;
}

interface Props {
  lang: Language;
  steps: Step[];
  color?: 'seo' | 'ads' | 'social' | 'abm' | 'primary';
}

const { lang, steps, color = 'primary' } = Astro.props;

const colorConfig = {
  seo: { gradient: 'from-emerald-500 to-teal-600', bg: 'bg-emerald-500', ring: 'ring-emerald-500' },
  ads: { gradient: 'from-amber-500 to-orange-600', bg: 'bg-amber-500', ring: 'ring-amber-500' },
  social: { gradient: 'from-violet-500 to-purple-600', bg: 'bg-violet-500', ring: 'ring-violet-500' },
  abm: { gradient: 'from-pink-500 to-rose-600', bg: 'bg-pink-500', ring: 'ring-pink-500' },
  primary: { gradient: 'from-blue-500 to-indigo-600', bg: 'bg-blue-500', ring: 'ring-blue-500' },
};

const colors = colorConfig[color];

const title = lang === 'fr' ? 'Notre Processus' : 'Our Process';
const subtitle = lang === 'fr'
  ? 'Une approche structurÃ©e pour des rÃ©sultats durables'
  : 'A structured approach for lasting results';

const stepIcons = ['search', 'target', 'zap', 'trending-up'];
---

<section class="py-24 bg-white overflow-hidden">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-20">
      <span class={`inline-block px-4 py-1 rounded-full text-sm font-medium bg-gradient-to-r ${colors.gradient} text-white mb-4`}>
        ðŸŽ¯ {lang === 'fr' ? 'MÃ©thodologie' : 'Methodology'}
      </span>
      <h2 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
        {title}
      </h2>
      <p class="text-lg text-slate-600">
        {subtitle}
      </p>
    </div>

    <!-- Desktop Timeline (horizontal) -->
    <div class="hidden lg:block relative">
      <!-- Timeline line -->
      <div class="absolute top-16 left-0 right-0 h-1 bg-slate-200">
        <div class={`timeline-progress h-full bg-gradient-to-r ${colors.gradient} rounded-full`} style="width: 0%"></div>
      </div>

      <div class="grid grid-cols-4 gap-8">
        {steps.map((step, index) => (
          <div
            class="timeline-step group relative pt-8"
            style={`animation-delay: ${index * 200}ms`}
            data-step={index}
          >
            <!-- Step number circle -->
            <div class="absolute top-12 left-1/2 -translate-x-1/2 -translate-y-1/2 z-10">
              <div class={`
                w-16 h-16 rounded-full bg-white border-4 border-slate-200 flex items-center justify-center
                transition-all duration-500 group-hover:border-transparent group-hover:scale-110
                step-circle
              `}>
                <div class={`
                  w-12 h-12 rounded-full bg-slate-100 flex items-center justify-center
                  transition-all duration-500 group-hover:bg-gradient-to-br group-hover:${colors.gradient}
                `}>
                  <span class="text-xl font-bold text-slate-400 group-hover:text-white transition-colors">
                    {step.step}
                  </span>
                </div>
              </div>
              <!-- Pulse effect -->
              <div class={`absolute inset-0 rounded-full ${colors.bg} opacity-0 group-hover:opacity-30 animate-ping`}></div>
            </div>

            <!-- Content card -->
            <div class="mt-16 p-6 bg-slate-50 rounded-2xl border border-slate-100 group-hover:bg-white group-hover:shadow-xl group-hover:-translate-y-2 transition-all duration-500">
              <div class={`w-12 h-12 rounded-xl bg-gradient-to-br ${colors.gradient} flex items-center justify-center mb-4 text-white group-hover:scale-110 group-hover:rotate-6 transition-all duration-300`}>
                <Icon name={stepIcons[index] || 'zap'} size={24} />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">
                {step.title}
              </h3>
              <p class="text-slate-600 text-sm leading-relaxed">
                {step.description}
              </p>
            </div>

            <!-- Connector arrow (except last) -->
            {index < steps.length - 1 && (
              <div class="absolute top-16 -right-4 transform -translate-y-1/2 text-slate-300 opacity-0 group-hover:opacity-100 transition-opacity z-20">
                <svg class="w-8 h-8 animate-bounce-x" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- Mobile Timeline (vertical) -->
    <div class="lg:hidden relative">
      <!-- Vertical line -->
      <div class="absolute left-8 top-0 bottom-0 w-1 bg-slate-200">
        <div class={`timeline-progress-mobile w-full bg-gradient-to-b ${colors.gradient} rounded-full`} style="height: 0%"></div>
      </div>

      <div class="space-y-12">
        {steps.map((step, index) => (
          <div
            class="timeline-step-mobile relative flex gap-6"
            style={`animation-delay: ${index * 150}ms`}
          >
            <!-- Step circle -->
            <div class="flex-shrink-0 relative z-10">
              <div class={`w-16 h-16 rounded-full bg-white border-4 border-slate-200 flex items-center justify-center shadow-lg`}>
                <div class={`w-10 h-10 rounded-full bg-gradient-to-br ${colors.gradient} flex items-center justify-center`}>
                  <span class="text-lg font-bold text-white">{step.step}</span>
                </div>
              </div>
            </div>

            <!-- Content -->
            <div class="flex-1 pt-2">
              <div class={`w-10 h-10 rounded-lg bg-gradient-to-br ${colors.gradient} flex items-center justify-center mb-3 text-white`}>
                <Icon name={stepIcons[index] || 'zap'} size={20} />
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">
                {step.title}
              </h3>
              <p class="text-slate-600 text-sm leading-relaxed">
                {step.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .timeline-step {
    animation: fade-up 0.6s ease forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .timeline-step-mobile {
    animation: fade-left 0.6s ease forwards;
    opacity: 0;
    transform: translateX(-20px);
  }

  @keyframes fade-up {
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fade-left {
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes bounce-x {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(5px); }
  }

  .animate-bounce-x {
    animation: bounce-x 1s ease-in-out infinite;
  }

  /* Hover states for step circles */
  .timeline-step:hover .step-circle {
    box-shadow: 0 0 0 8px rgba(59, 130, 246, 0.1);
  }
</style>

<script>
  // Animate timeline progress on scroll
  const observerOptions = {
    threshold: 0.3,
    rootMargin: '0px'
  };

  const timelineObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        // Animate desktop progress line
        const progressBar = entry.target.querySelector('.timeline-progress');
        if (progressBar) {
          setTimeout(() => {
            (progressBar as HTMLElement).style.width = '100%';
            (progressBar as HTMLElement).style.transition = 'width 2s ease-out';
          }, 500);
        }

        // Animate mobile progress line
        const progressBarMobile = entry.target.querySelector('.timeline-progress-mobile');
        if (progressBarMobile) {
          setTimeout(() => {
            (progressBarMobile as HTMLElement).style.height = '100%';
            (progressBarMobile as HTMLElement).style.transition = 'height 2s ease-out';
          }, 500);
        }

        timelineObserver.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('section').forEach((section) => {
    if (section.querySelector('.timeline-progress') || section.querySelector('.timeline-progress-mobile')) {
      timelineObserver.observe(section);
    }
  });
</script>
