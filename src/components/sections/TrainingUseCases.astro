---

<section class="py-24 bg-slate-950 text-white overflow-hidden">
  <!-- Background Effects -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-20 left-10 w-72 h-72 bg-cyan-500/10 rounded-full blur-[100px]"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-blue-500/10 rounded-full blur-[100px]"></div>
  </div>

  <div class="container-custom relative z-10">
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/10 mb-6">
        <span class="w-2 h-2 bg-cyan-400 rounded-full animate-pulse"></span>
        <span class="text-white/90 font-medium">{t.badge}</span>
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        {t.headline}
      </h2>
      <p class="text-xl text-slate-400 max-w-2xl mx-auto">
        {t.subtitle}
      </p>
    </div>

    <!-- Department Cards -->
    <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
      {t.departments.map((dept, index) => (
        <div
          class="department-card group relative bg-white/5 backdrop-blur-sm rounded-3xl p-8 border border-white/10 hover:border-white/20 transition-all duration-500"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Icon & Title -->
          <div class="flex items-center gap-4 mb-6">
            <div class={`w-14 h-14 rounded-2xl bg-gradient-to-br ${dept.color} flex items-center justify-center text-white shadow-lg`}>
              <Fragment set:html={icons[dept.icon as keyof typeof icons]} />
            </div>
            <h3 class="text-2xl font-bold text-white">{dept.title}</h3>
          </div>

          <!-- Tasks List -->
          <ul class="space-y-3">
            {dept.tasks.map((task, taskIndex) => (
              <li
                class="task-item flex items-start gap-3 text-slate-300"
                style={`animation-delay: ${(index * 100) + (taskIndex * 50)}ms`}
              >
                <span class={`flex-shrink-0 w-5 h-5 rounded-full ${dept.lightBg} ${dept.textColor} flex items-center justify-center mt-0.5`}>
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
                <span class="text-sm leading-relaxed">{task}</span>
              </li>
            ))}
          </ul>

          <!-- Hover glow -->
          <div class={`absolute inset-0 rounded-3xl bg-gradient-to-br ${dept.color} opacity-0 group-hover:opacity-5 transition-opacity duration-500 pointer-events-none`}></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .department-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease forwards;
  }

  .task-item {
    opacity: 0;
    transform: translateX(-10px);
  }

  .department-card.visible .task-item {
    animation: slideIn 0.4s ease forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
        const tasks = entry.target.querySelectorAll('.task-item');
        tasks.forEach((task, index) => {
          setTimeout(() => {
            (task as HTMLElement).style.animation = 'slideIn 0.4s ease forwards';
          }, index * 100);
        });
      }
    });
  }, { threshold: 0.2 });

  document.querySelectorAll('.department-card').forEach(card => {
    observer.observe(card);
  });
</script>
