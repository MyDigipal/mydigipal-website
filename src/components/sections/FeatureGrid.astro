---
import Card from '@/components/ui/Card.astro';
import Icon from '@/components/ui/Icon.astro';

interface Feature {
  icon?: string;
  title: string;
  description: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  features: Feature[];
  columns?: 2 | 3 | 4;
}

const { title, subtitle, features, columns = 3 } = Astro.props;

const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4',
};
---

<section class="section">
  <div class="container-custom">
    {(title || subtitle) && (
      <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
        {title && <h2 class="heading-2 mb-4">{title}</h2>}
        {subtitle && <p class="body-large">{subtitle}</p>}
      </div>
    )}

    <div class={`grid gap-6 lg:gap-8 stagger-children ${gridCols[columns]}`}>
      {features.map((feature) => (
        <Card variant="hover" padding="lg">
          {feature.icon && (
            <div class="w-12 h-12 rounded-xl bg-primary-50 flex items-center justify-center mb-4">
              <Icon name={feature.icon} size={24} class="text-primary-500" />
            </div>
          )}
          <h3 class="heading-4 mb-3">{feature.title}</h3>
          <p class="body-small text-slate-500">{feature.description}</p>
        </Card>
      ))}
    </div>
  </div>
</section>
