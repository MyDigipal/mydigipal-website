        </div>
        <div class="flex-1">
          <h3 class="text-xl font-bold text-slate-900 mb-3">{t.services[6].title}</h3>
          <p class="text-slate-600 text-sm leading-relaxed mb-4">{t.services[6].description}</p>
          <div class="flex flex-wrap gap-2">
            {t.services[6].features.map((feature) => (
              <span class="text-xs px-2 py-1 bg-rose-50 text-rose-600 rounded-full">
                {feature}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .service-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
