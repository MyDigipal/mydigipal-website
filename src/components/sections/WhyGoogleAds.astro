---
/**
 * WhyGoogleAds - Educational section explaining Google Ads value
 * Interactive blocks with stats and benefits
 */
import type { Language } from '@/i18n/config';
import Icon from '@/components/ui/Icon.astro';

interface Props {
  lang: Language;
  color?: 'seo' | 'ads' | 'social' | 'abm' | 'primary';
}

const { lang, color = 'ads' } = Astro.props;

const content = {
  en: {
    badge: 'Why Google Ads?',
    title: 'Reach your customers at the right moment',
    subtitle: 'Google Ads puts your business in front of people actively searching for what you offer.',
    mainStat: {
      value: '8.5B',
      label: 'Daily Google searches',
      sublabel: 'Your customers are searching right now',
    },
    blocks: [
      {
        icon: 'target',
        title: 'Intent-Based Targeting',
        description: 'Unlike social ads, Google Ads captures users with active buying intent. They\'re already looking for your solution.',
        stat: '65%',
        statLabel: 'of high-intent clicks go to ads',
      },
      {
        icon: 'zap',
        title: 'Instant Visibility',
        description: 'Skip the wait for organic rankings. Launch campaigns today and appear at the top of search results immediately.',
        stat: '24h',
        statLabel: 'to first results',
      },
      {
        icon: 'bar-chart',
        title: 'Measurable ROI',
        description: 'Track every click, call, and conversion. Know exactly what your advertising budget delivers.',
        stat: '200%',
        statLabel: 'average ROAS for optimized campaigns',
      },
      {
        icon: 'sliders',
        title: 'Full Control',
        description: 'Set your own budget, pause anytime, target specific locations, schedules, and demographics.',
        stat: '100%',
        statLabel: 'budget control',
      },
    ],
    cta: 'See what you\'re missing →',
  },
  fr: {
    badge: 'Pourquoi Google Ads ?',
    title: 'Atteignez vos clients au bon moment',
    subtitle: 'Google Ads place votre entreprise devant les personnes qui recherchent activement ce que vous proposez.',
    mainStat: {
      value: '8.5B',
      label: 'Recherches Google par jour',
      sublabel: 'Vos clients cherchent en ce moment',
    },
    blocks: [
      {
        icon: 'target',
        title: 'Ciblage par Intention',
        description: 'Contrairement aux social ads, Google Ads capture les utilisateurs avec une intention d\'achat active. Ils cherchent déjà votre solution.',
        stat: '65%',
        statLabel: 'des clics haute intention vont aux pubs',
      },
      {
        icon: 'zap',
        title: 'Visibilité Immédiate',
        description: 'N\'attendez pas les classements organiques. Lancez vos campagnes aujourd\'hui et apparaissez en tête immédiatement.',
        stat: '24h',
        statLabel: 'pour les premiers résultats',
      },
      {
        icon: 'bar-chart',
        title: 'ROI Mesurable',
        description: 'Suivez chaque clic, appel et conversion. Sachez exactement ce que votre budget publicitaire rapporte.',
        stat: '200%',
        statLabel: 'ROAS moyen pour campagnes optimisées',
      },
      {
        icon: 'sliders',
        title: 'Contrôle Total',
        description: 'Définissez votre budget, mettez en pause à tout moment, ciblez des zones, horaires et démographies spécifiques.',
        stat: '100%',
        statLabel: 'de contrôle budgétaire',
      },
    ],
    cta: 'Découvrez ce que vous manquez →',
  },
};

const t = content[lang] || content.en;
---

<section class="section bg-white overflow-hidden" data-color={color}>
  <div class="container-custom">
    <!-- Header -->
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center mb-16">
      <div class="animate-on-scroll">
        <span class="badge-ads mb-4">{t.badge}</span>
        <h2 class="heading-2 mb-4">{t.title}</h2>
        <p class="body-large text-slate-600">{t.subtitle}</p>
      </div>

      <!-- Main Stat - Interactive Counter -->
      <div class="animate-on-scroll animation-delay-200">
        <div class="relative">
          <!-- Decorative rings -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="w-64 h-64 rounded-full border border-amber-200 animate-pulse"></div>
            <div class="absolute w-48 h-48 rounded-full border border-amber-300 animate-pulse" style="animation-delay: 200ms"></div>
            <div class="absolute w-32 h-32 rounded-full border border-amber-400 animate-pulse" style="animation-delay: 400ms"></div>
          </div>

          <!-- Center stat -->
          <div class="relative bg-gradient-to-br from-amber-500 to-orange-500 rounded-3xl p-8 text-center text-white shadow-xl transform hover:scale-105 transition-transform duration-300">
            <div class="text-5xl lg:text-6xl font-bold mb-2 counter" data-target="8500000000">
              {t.mainStat.value}
            </div>
            <div class="text-lg font-medium opacity-90">{t.mainStat.label}</div>
            <div class="text-sm opacity-75 mt-1">{t.mainStat.sublabel}</div>

            <!-- Animated dots -->
            <div class="absolute -top-2 -right-2 w-4 h-4 bg-white rounded-full animate-ping"></div>
            <div class="absolute -bottom-2 -left-2 w-3 h-3 bg-white rounded-full animate-ping" style="animation-delay: 500ms"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- 4 Blocks Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {t.blocks.map((block, index) => (
        <div
          class="group relative bg-slate-50 rounded-2xl p-6 transition-all duration-500 hover:bg-white hover:shadow-xl hover:-translate-y-2 animate-on-scroll cursor-pointer"
          style={`animation-delay: ${(index + 2) * 100}ms`}
        >
          <!-- Icon -->
          <div class="w-12 h-12 rounded-xl bg-amber-500/10 text-amber-600 flex items-center justify-center mb-4 group-hover:bg-amber-500 group-hover:text-white transition-all duration-300 group-hover:scale-110 group-hover:rotate-3">
            <Icon name={block.icon} class="w-6 h-6" />
          </div>

          <!-- Stat badge -->
          <div class="inline-flex items-center gap-1 bg-amber-500 text-white px-3 py-1 rounded-full text-sm font-bold mb-3 transform group-hover:scale-110 transition-transform">
            {block.stat}
          </div>
          <p class="text-xs text-slate-500 mb-3">{block.statLabel}</p>

          <!-- Content -->
          <h3 class="font-semibold text-slate-900 mb-2 group-hover:text-amber-600 transition-colors">
            {block.title}
          </h3>
          <p class="text-sm text-slate-600 leading-relaxed">
            {block.description}
          </p>

          <!-- Hover decoration -->
          <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-amber-500 to-orange-500 rounded-b-2xl transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .counter {
    font-variant-numeric: tabular-nums;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.4; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.02); }
  }

  .animate-pulse {
    animation: pulse 3s ease-in-out infinite;
  }
</style>
