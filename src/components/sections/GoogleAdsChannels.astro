              </span>
            </div>
          </div>

          <!-- Description -->
          <p class="relative text-slate-600 mb-6 leading-relaxed">{channel.description}</p>

          <!-- Features Tags -->
          <div class="relative flex flex-wrap gap-2 mb-4">
            {channel.features.map((feature) => (
              <span class={`${channel.bgColor} text-slate-700 px-3 py-1.5 rounded-full text-sm font-medium transition-all duration-300 group-hover:scale-105`}>
                {feature}
              </span>
            ))}
          </div>

          <!-- Preview hint -->
          <div class="relative flex items-center gap-2 text-sm text-slate-400 group-hover:text-amber-600 transition-colors mt-4">
            <Icon name="eye" class="w-4 h-4" />
