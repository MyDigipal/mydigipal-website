  /* Stagger animation for features */
  .channel-card:hover .flex-wrap span {
    animation: pop 0.3s ease forwards;
  }

  .channel-card:hover .flex-wrap span:nth-child(1) { animation-delay: 0ms; }
  .channel-card:hover .flex-wrap span:nth-child(2) { animation-delay: 50ms; }
  .channel-card:hover .flex-wrap span:nth-child(3) { animation-delay: 100ms; }
  .channel-card:hover .flex-wrap span:nth-child(4) { animation-delay: 150ms; }

  @keyframes pop {
    0% { transform: scale(1); }
    50% { transform: scale(1.08); }
    100% { transform: scale(1.05); }
  }

  @keyframes modal-in {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(20px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .animate-modal-in {
    animation: modal-in 0.3s ease forwards;
  }

  /* Preview card styles */
  .preview-search-ad {
    background: #fff;
    border-radius: 8px;
    padding: 16px;
    border: 1px solid #e5e7eb;
  }

  .preview-shopping-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
  }

  .preview-pmax-channels {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
  }

  @media (max-width: 640px) {
    .preview-shopping-grid,
    .preview-pmax-channels {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

