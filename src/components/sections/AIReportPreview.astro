---
import { type Language } from '@/i18n/config';
import Icon from '@/components/ui/Icon.astro';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;

const translations = {
  en: {
    badge: "AI-Powered Insights",
    headline: "Reports That Talk Back",
    subtitle: "Our AI analytics don't just show data - they explain it, spot anomalies, and recommend actions.",
    chatExample: {
      aiMessage: "I've analyzed your December performance. Want me to dive deeper into this report?",
      userMessage: "Why did conversions drop last week?",
      aiResponse: "Good question! Last week's conversion drop (-23%) correlates with your landing page changes on Dec 15. The new page has 40% slower load time on mobile. I recommend reverting the header image optimization.",
      suggestion: "Would you like me to create a test variant to validate this hypothesis?"
    },
    features: [
      "Natural language queries",
      "Anomaly detection",
      "Automated recommendations",
      "Trend predictions"
    ],
    reportMetrics: [
      { label: "Sessions", value: "45,234", change: "+12%" },
      { label: "Conversions", value: "1,847", change: "-8%" },
      { label: "Revenue", value: "€127,350", change: "+5%" },
      { label: "ROAS", value: "4.2x", change: "+15%" },
    ]
  },
  fr: {
    badge: "Insights Alimentés par l'IA",
    headline: "Des Rapports Qui Vous Répondent",
    subtitle: "Nos analytics IA ne montrent pas juste des données - ils les expliquent, détectent les anomalies et recommandent des actions.",
    chatExample: {
      aiMessage: "J'ai analysé votre performance de décembre. Voulez-vous que j'approfondisse ce rapport ?",
      userMessage: "Pourquoi les conversions ont baissé la semaine dernière ?",
      aiResponse: "Bonne question ! La baisse des conversions la semaine dernière (-23%) corrèle avec vos changements de landing page le 15 décembre. La nouvelle page a un temps de chargement 40% plus lent sur mobile. Je recommande de revenir sur l'optimisation de l'image header.",
      suggestion: "Souhaitez-vous que je crée une variante de test pour valider cette hypothèse ?"
    },
    features: [
      "Requêtes en langage naturel",
      "Détection d'anomalies",
      "Recommandations automatiques",
      "Prédictions de tendances"
    ],
    reportMetrics: [
      { label: "Sessions", value: "45 234", change: "+12%" },
      { label: "Conversions", value: "1 847", change: "-8%" },
      { label: "Revenu", value: "127 350€", change: "+5%" },
      { label: "ROAS", value: "4.2x", change: "+15%" },
    ]
  }
};

const t = translations[lang] || translations.en;
---

<section class="py-24 bg-gradient-to-br from-purple-900 via-indigo-900 to-slate-900 text-white overflow-hidden">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Content -->
      <div class="animate-on-scroll">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-purple-500/20 text-purple-300 font-medium mb-6">
          <Icon name="cpu" size={16} />
          <span>{t.badge}</span>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {t.headline}
        </h2>
        <p class="text-xl text-slate-300 mb-8">
          {t.subtitle}
        </p>

        <!-- Features List -->
        <div class="grid grid-cols-2 gap-4">
          {t.features.map((feature) => (
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-lg bg-purple-500/20 flex items-center justify-center">
                <Icon name="check" size={16} class="text-purple-400" />
              </div>
              <span class="text-slate-300">{feature}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Right: Interactive Mockup -->
      <div class="animate-on-scroll" style="animation-delay: 200ms">
        <div class="relative">
          <!-- Report Card -->
          <div class="bg-white rounded-2xl shadow-2xl p-6 mb-4">
            <div class="flex items-center justify-between mb-6">
              <div>
                <h4 class="text-lg font-bold text-slate-900">{lang === 'fr' ? 'Bilan Décembre 2025' : 'December 2025 Report'}</h4>
                <p class="text-sm text-slate-500">{lang === 'fr' ? 'Performance Marketing' : 'Marketing Performance'}</p>
              </div>
              <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-purple-500 to-indigo-600 flex items-center justify-center">
                <Icon name="bar-chart-2" size={20} class="text-white" />
              </div>
            </div>

            <!-- Metrics Grid -->
            <div class="grid grid-cols-2 gap-4">
              {t.reportMetrics.map((metric) => (
                <div class="p-3 bg-slate-50 rounded-xl">
                  <div class="text-sm text-slate-500 mb-1">{metric.label}</div>
                  <div class="flex items-baseline gap-2">
                    <span class="text-xl font-bold text-slate-900">{metric.value}</span>
                    <span class={`text-xs font-medium ${metric.change.startsWith('+') ? 'text-emerald-500' : 'text-red-500'}`}>
                      {metric.change}
                    </span>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- AI Chat Widget -->
          <div class="bg-gradient-to-br from-purple-600 to-indigo-700 rounded-2xl shadow-2xl p-4 transform translate-x-4">
            <!-- AI Message -->
            <div class="flex gap-3 mb-4">
              <div class="w-8 h-8 rounded-full bg-white/20 flex items-center justify-center flex-shrink-0">
                <Icon name="cpu" size={16} class="text-white" />
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-xl rounded-tl-none p-3 max-w-[280px]">
                <p class="text-sm text-white">{t.chatExample.aiMessage}</p>
              </div>
            </div>

            <!-- User Message -->
            <div class="flex gap-3 mb-4 justify-end">
              <div class="bg-white rounded-xl rounded-tr-none p-3 max-w-[250px]">
                <p class="text-sm text-slate-700">{t.chatExample.userMessage}</p>
              </div>
              <div class="w-8 h-8 rounded-full bg-slate-200 flex items-center justify-center flex-shrink-0">
                <Icon name="user" size={16} class="text-slate-600" />
              </div>
            </div>

            <!-- AI Response -->
            <div class="flex gap-3">
              <div class="w-8 h-8 rounded-full bg-white/20 flex items-center justify-center flex-shrink-0">
                <Icon name="cpu" size={16} class="text-white" />
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-xl rounded-tl-none p-3 max-w-[280px]">
                <p class="text-sm text-white mb-2">{t.chatExample.aiResponse}</p>
                <p class="text-xs text-purple-200 italic">{t.chatExample.suggestion}</p>
              </div>
            </div>

            <!-- Input Bar -->
            <div class="mt-4 flex gap-2">
              <input
                type="text"
                placeholder={lang === 'fr' ? 'Posez une question...' : 'Ask a question...'}
                class="flex-1 bg-white/10 border border-white/20 rounded-xl px-4 py-2 text-sm text-white placeholder-white/50 focus:outline-none focus:border-white/40"
                readonly
              />
              <button class="w-10 h-10 rounded-xl bg-white/20 flex items-center justify-center hover:bg-white/30 transition-colors">
                <Icon name="send" size={18} class="text-white" />
              </button>
            </div>
          </div>

          <!-- Floating decorations -->
          <div class="absolute -top-4 -right-4 w-20 h-20 bg-gradient-to-br from-pink-500 to-purple-600 rounded-2xl -z-10 opacity-50 blur-sm"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-on-scroll {
    animation: fade-up 0.6s ease forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  @keyframes fade-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
