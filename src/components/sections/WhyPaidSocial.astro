---
/**
 * WhyPaidSocial - Educational section about Paid Social value
 * Shows key benefits with animated counters and visual blocks
 */
import type { Language } from '@/i18n/config';
import Icon from '@/components/ui/Icon.astro';

interface Props {
  lang: Language;
  color?: string;
}

const { lang, color = 'social' } = Astro.props;

const content = {
  en: {
    badge: 'Why Paid Social?',
    title: 'Target Your Ideal Prospect',
    subtitle: 'Detect your target audience when they are showing interest, and improve your awareness towards a selected audience.',
    stat: '4.9B',
    statLabel: 'social media users worldwide',
    blocks: [
      {
        icon: 'target',
        title: 'Precision Targeting',
        description: 'Reach decision-makers by job title, company size, industry, and interests with laser-focused accuracy.',
      },
      {
        icon: 'clock',
        title: 'Right Time, Right Place',
        description: 'Be there when your prospects are actively engaged and showing purchase intent signals.',
      },
      {
        icon: 'trending-up',
        title: 'Measurable ROI',
        description: 'Track every click, conversion, and dollar spent with transparent, real-time reporting.',
      },
      {
        icon: 'users',
        title: 'ABM Ready',
        description: 'Align with Account-Based Marketing strategies to target high-value accounts directly.',
      },
    ],
  },
  fr: {
    badge: 'Pourquoi le paid social ?',
    title: 'Ciblez votre prospect idéal',
    subtitle: 'Détectez votre audience cible quand elle montre de l\'intérêt, et améliorez votre notoriété auprès d\'une audience sélectionnée.',
    stat: '4.9Mrd',
    statLabel: 'utilisateurs de réseaux sociaux dans le monde',
    blocks: [
      {
        icon: 'target',
        title: 'Ciblage de précision',
        description: 'Atteignez les décideurs par titre de poste, taille d\'entreprise, secteur et intérêts avec une précision chirurgicale.',
      },
      {
        icon: 'clock',
        title: 'Bon moment, bon endroit',
        description: 'Soyez présent quand vos prospects sont activement engagés et montrent des signaux d\'intention d\'achat.',
      },
      {
        icon: 'trending-up',
        title: 'ROI mesurable',
        description: 'Suivez chaque clic, conversion et euro dépensé avec un reporting transparent en temps réel.',
      },
      {
        icon: 'users',
        title: 'Prêt pour l\'ABM',
        description: 'Alignez-vous avec les stratégies Account-Based Marketing pour cibler directement les comptes à haute valeur.',
      },
    ],
  },
};

const t = content[lang] || content.en;

const colorClasses = {
  social: {
    badge: 'bg-violet-100 text-violet-700',
    stat: 'text-violet-500',
    icon: 'bg-violet-100 text-violet-600',
    border: 'border-violet-200 hover:border-violet-400',
    glow: 'violet',
  },
};

const colors = colorClasses[color as keyof typeof colorClasses] || colorClasses.social;
---

<section class="section bg-white overflow-hidden">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
      <span class={`inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium mb-6 ${colors.badge}`}>
        <Icon name="sparkles" size={16} />
        {t.badge}
      </span>
      <h2 class="heading-2 mb-4">{t.title}</h2>
      <p class="body-large text-slate-600">{t.subtitle}</p>
    </div>

    <!-- Main stat with animation -->
    <div class="relative max-w-4xl mx-auto mb-16">
      <div class="absolute inset-0 bg-gradient-to-r from-violet-500/10 via-purple-500/10 to-pink-500/10 rounded-3xl blur-3xl"></div>
      <div class="relative bg-white rounded-3xl border border-slate-200 p-8 md:p-12 text-center shadow-xl">
        <div class="stat-counter mb-4">
          <span class={`text-6xl md:text-8xl font-bold ${colors.stat}`} data-target="4.9">0</span>
          <span class={`text-4xl md:text-6xl font-bold ${colors.stat}`}>B</span>
        </div>
        <p class="text-xl text-slate-600">{t.statLabel}</p>

        <!-- Animated social icons -->
        <div class="flex justify-center gap-6 mt-8">
          <div class="w-12 h-12 rounded-xl bg-[#0A66C2] flex items-center justify-center text-white floating-icon" style="animation-delay: 0s;">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </div>
          <div class="w-12 h-12 rounded-xl bg-[#1877F2] flex items-center justify-center text-white floating-icon" style="animation-delay: 0.2s;">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </div>
          <div class="w-12 h-12 rounded-xl bg-[#FF0000] flex items-center justify-center text-white floating-icon" style="animation-delay: 0.4s;">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
          </div>
          <div class="w-12 h-12 rounded-xl bg-black flex items-center justify-center text-white floating-icon" style="animation-delay: 0.6s;">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </div>
        </div>
      </div>
    </div>

    <!-- 4 Blocks Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 stagger-children">
      {t.blocks.map((block, index) => (
        <div class={`group p-6 rounded-2xl border-2 ${colors.border} bg-white transition-all duration-300 hover:shadow-lg hover:-translate-y-1`}>
          <div class={`w-14 h-14 rounded-xl ${colors.icon} flex items-center justify-center mb-4 group-hover:scale-110 transition-transform`}>
            <Icon name={block.icon} size={28} />
          </div>
          <h3 class="heading-4 mb-2">{block.title}</h3>
          <p class="body-small text-slate-500">{block.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .stat-counter {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.25rem;
  }

  .floating-icon {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }
</style>

<script>
  // Animate stat counter
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const counter = entry.target.querySelector('[data-target]');
        if (counter) {
          const target = parseFloat(counter.getAttribute('data-target') || '0');
          let current = 0;
          const increment = target / 50;
          const timer = setInterval(() => {
            current += increment;
            if (current >= target) {
              counter.textContent = target.toString();
              clearInterval(timer);
            } else {
              counter.textContent = current.toFixed(1);
            }
          }, 40);
        }
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.5 });

  document.querySelectorAll('.stat-counter').forEach(el => {
    const parent = el.closest('section');
    if (parent) observer.observe(parent);
  });
</script>
